<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:minWidth="320dp"
              android:maxWidth="320dp"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <LinearLayout android:orientation="horizontal"
                  android:layout_weight="1"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent">

        <ImageView android:id="@+id/event_context_maid"
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:layout_weight="2"/>

        <ScrollView android:id="@+id/event_context_scrollView"
                    android:paddingTop="2dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">
            <TextView android:id="@+id/event_context_message"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:minWidth="320dp"
                      android:maxWidth="320dp"
                      android:textSize="20sp"/>
        </ScrollView>
    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:paddingTop="5px"
                  android:background="@drawable/background_gray">

        <Button android:id="@+id/context_menu_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:text="@string/edit"/>

        <Button android:id="@+id/context_menu_delete"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:text="@string/delete"/>
    </LinearLayout>

</LinearLayout>
